{% block body %}
<script>
	document.getElementById("projekt").className += "active";

	</script>
    <h1>Projekt</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projekt.id }}</td>
            </tr>
            <tr>
                <th>Projektname</th>
                <td>{{ projekt.projektname }}</td>

{% extends 'base.html.twig' %}

{% block body %}

 <script>
	document.getElementById("kunde").className += "active";

	</script>
	
    <h1>Kundenübersicht</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Adresse</th>
                <th>Ort</th>
                <th>Telefon</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="small">
        {% for kunde in kundes %}
            <tr>
                <td><a href="{{ path('kunde_show', { 'id': kunde.id }) }}">{{ kunde.id }}</a></td>
                <td>{{ kunde.name }}</td>
                <td>{{ kunde.adresse }}</td>
                <td>{{ kunde.ort }}</td>
                <td>{{ kunde.telefon }}</td>
                <td>
                    
                        <li class="list-inline">
                            
                        <div class="btn-group" role="group" aria-label="...">
  <a href="{{ path('kunde_show', { 'id': kunde.id }) }}" class="btn btn-info">Anzeigen</a>
  <a href="{{ path('kunde_edit', { 'id': kunde.id }) }}" class="btn btn-primary">Ändern</a>
  <a class="list-inline">
  {{ form_start(delete_form) }}
  <input class="btn btn-danger" type="submit" value="Löschen">
  {{ form_end(delete_form) }}
  </a>

                        
                      </li>                                   
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
        <li class="list-inline">
            <a class="btn btn-success"  href="{{ path('kunde_new') }}">Neuer Kunde anlegen</a>
        </li>

{% endblock %}
